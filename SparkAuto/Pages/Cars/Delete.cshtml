@page
@model SparkAuto.Pages.Cars.DeleteModel
@{
}
<h2 class="text-info">Edit Car</h2>
<form method="post">
    @Html.HiddenFor(m => m.Car.UserId)
    @Html.HiddenFor(m => m.Car.Id)
    <div class="white-background border">
        
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.VIN"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.VIN" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Make"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Make" class="form-control" readonly/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Model"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Model" class="form-control" readonly/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Style"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Style" class="form-control"readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Year"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Year" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Miles"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Miles" class="form-control" readonly/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Color"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Color" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-primary form-control" value="Delete" onclick="return confirm('Are You Sure?')" />
                    </div>
                    <div class="col-6">
                        <a class="btn btn-success form-control" asp-page="Index" asp-route-userId="@Model.Car.UserId">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
