@page
@model SparkAuto.Pages.Cars.CreateModel
@{
}
<h2 class="text-info">Create New Car</h2>
<form method="post">
    @Html.HiddenFor(m => m.Car.UserId)
    <div class="white-background border">
        <div class="row">
            <div class="col-5 offset-2">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.VIN"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.VIN" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Car.VIN"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Make"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Make" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Car.Make"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Model"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Model" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Car.Model"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Style"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Style" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Car.Style"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Year"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Year" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Car.Year"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Miles"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Miles" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Car.Miles"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Color"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Color" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Car.Color"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-primary form-control" value="Create" />
                    </div>
                    <div class="col-6">
                        <a class="btn btn-success form-control" asp-page="Index" asp-route-userId="@Model.Car.UserId">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}