@page
@model SparkAuto.Pages.Services.DetailsModel
@{
}
<div class="container pt-4 pb-2 row">
    <div class="col-6">
        <h2 class="text-info">Create New Services</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-page="../Services/History" asp-route-carId="@Model.service.CarId"
           class="btn btn-outline-success">Back To List </a>
    </div>
</div>
<div class="container white-background">
    <div class="card">

        <div class="card-header bg-dark text-light container row">
            <div class="col-1 text-center text-white-50 pt-3">

            </div>
            <div class="col-5">
                <label class="text-info">
                    @Model.service.Car.ApplicationUser.Name
                </label>
                <br />
                <label class="text-info">
                    @Model.service.Car.ApplicationUser.Email / @Model.service.Car.ApplicationUser.PhoneNumber
                </label>
            </div>
            <div class="col-5 text-right">

                <label class="text-info">
                    @Model.service.Car.Make / @Model.service.Car.Model /  @Model.service.Car.Style
                </label>
                <br />
                <label class="text-info">
                    @Model.service.Car.Year
                </label>
            </div>
        </div>

        <div class="card-body">

            <div class="border container rounded p-2">
                <h3 class="text-info pb-2">Service Summery</h3>
            </div>
            @if (Model.serviceDetails.Count() == 0)
            {


                <p class="text-danger">No Services has been added,please Add New</p>
            }
            else
            {
                <div class="row mt-3">
                    <div class="col-7">
                        <table class="table table-striped border">
                            <tr class="text-secondary">
                                <th>
                                    @Html.DisplayNameFor(m => m.serviceDetails[0].ServiceName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.serviceDetails[0].ServicePrice)
                                </th>

                            </tr>
                            @foreach (var item in Model.serviceDetails)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(m => item.ServiceName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.ServicePrice)
                                    </td>

                                </tr>
                            }
                            <tr style="background-color:#e2fee2">
                                <td colspan="1">
                                    <h6 class="text-success">Total Price:</h6>
                                </td>
                                <td colspan="2">

                                    <h6 class="text-success"> $ @Html.DisplayFor(m => m.service.TotalPrice)</h6>
                                </td>

                            </tr>

                        </table>
                    </div>
                    <div class="col-5">
                        <div class="row">
                            <div class="col-3">
                                <label asp-for="service.Miles"></label>
                            </div>
                            <div class="col-12">
                                <input class="form-control" asp-for="service.Miles" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 pt-2">
                                <textarea asp-for="service.Comments" class="form-control" readonly
                                          style="height:100px;"></textarea>
                            </div>
                        </div>

                    </div>
                </div>
            }

        </div>
    </div>
</div>