@page
@model SparkAuto.Pages.ServiceTypes.CreateModel
@{
}
<h2 class="text-info">Create New Service Type</h2>
<form method="post">
    <div class="white-background border">
        <div class="row">
            <div class="col-5 offset-2">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="serviceTypes.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="serviceTypes.Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="serviceTypes.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="serviceTypes.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="serviceTypes.Price" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="serviceTypes.Price"></span>

        </div>
        <partial name="_CreatePartail" />
    </div>
</form>
@section Scripts{ 
@{ 
   await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}