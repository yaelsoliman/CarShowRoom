@page
@model SparkAuto.Pages.ServiceTypes.IndexModel
@{
}

<div class="border white-background">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Service Types List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-page="Create"><i class="fa fa-plus-square-o"></i>Create New</a>
        </div>
    </div>

    <div>
        @if (Model.ServiceTypes.Count() == 0)
        {
            <p class="text-danger">No Service Type Exists.please Create New one</p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(modelitem => modelitem.ServiceTypes[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(modelitem => modelitem.ServiceTypes[0].Price)
                    </th>
                    <th>

                    </th>
                </tr>

                @foreach (var item in Model.ServiceTypes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelitem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.Price)
                        </td>
                        <td style="width:150px;">
                            <div class="btn-group" role="group">
                                <a asp-page="Details" class="btn btn-success" asp-route-id="@item.Id">Details</a>
                                <a asp-page="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a>
                                <a asp-page="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>

                            </div>
                        </td>
                    </tr>
                }
            </table>
        }


    </div>

</div>

